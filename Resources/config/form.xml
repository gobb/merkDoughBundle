<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="merk_dough.form.money_type" class="merk\DoughBundle\Form\Type\MoneyType">
            <tag name="form.type" alias="merk_dough_money" />
            <argument type="service" id="merk_dough.form.money_transformer" />
        </service>

        <service id="merk_dough.form.money_transformer" class="merk\DoughBundle\Form\DataTransformer\MoneyTransformer">
            <argument type="service" id="merk_dough.bank" />
        </service>

    </services>

</container>